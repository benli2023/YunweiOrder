<?xml version="1.0" encoding="UTF-8"?>
<column-models id="orderGoods">
	<profile id="order" default="true" >
		<!--
		<column-model>
			<header>id</header>
			<name>goodsId</name>
			<width>50</width>
			<align>center</align>
		</column-model>
		-->
		<column-model>
			<header>编码或条形码</header>
			<name>goods_code</name>
			<width>100</width>
			<align>center</align>
			<editor>
				<editable>false</editable>
			</editor>
		</column-model>
		<column-model>
			<header>产品ID</header>
			<name>productId</name>
			<width>100</width>
			<align>center</align>
		</column-model>
		<column-model>
			<header>产品</header>
			<name>productIdTxt</name>
			<width>100</width>
			<align>center</align>
			<editor>
				<editable>true</editable>
			</editor>
		</column-model>
		<column-model>
			<header>单位</header>
			<name>unit</name>
			<width>50</width>
			<align>center</align>
			<editor>
				<editable>true</editable>
				<type>omCombo</type>
				<name>unit</name>
				<options><![CDATA[
					{
					  dataSource:[
						{text:"请选择",value:""},
						{text:"只",value:"0"},
						{text:"个" , value:"1"},
						{text:"批",value:"2"}],
						editable: false 
					}
    			]]>
    			</options>
			</editor>
			<renderer><![CDATA[
    			function unitRenderer(value){
    				if(typeof value=='string') {
    					value=parseInt(value);
    				}
			        if(0 === value){
			            return "只";
			        }else if(1 === value){
			            return "个";
			        }else if(2 === value) {
			        	return "批";
			        }else{
			            return "";
			        }
		    	}
    			]]>
    		</renderer>
		</column-model>
		<column-model>
			<header>单价</header>
			<name>unitPrice</name>
			<width>50</width>
			<align>center</align>
			<editor>
				<editable>true</editable>
			</editor>
		</column-model>
		<column-model>
			<header>数量</header>
			<name>quantity</name>
			<width>50</width>
			<align>center</align>
			<editor>
				<editable>true</editable>
			</editor>
		</column-model>
		<column-model>
			<header>已交数量</header>
			<name>handedQuantity</name>
			<width>50</width>
			<align>center</align>
			<editor>
				<editable>true</editable>
			</editor>
		</column-model>
