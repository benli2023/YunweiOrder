<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">


<!-- 不使用namespace是由于sql搜索定位会比较方便 -->
<sqlMap>

    <resultMap id="RM.Dept" class="com.yunwei.order.model.Dept">
        <result property="deptId" column="dept_id"/>
        <result property="deptName" column="dept_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="remark" column="remark"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Dept.columns">
	    <![CDATA[
        dept_id ,dept_name ,parent_id ,remark 
	    ]]>
	</sql>
	
    <insert id="Dept.insert" >
    <![CDATA[
        INSERT INTO dept (
        	dept_id ,
        	dept_name ,
        	parent_id ,
        	remark 
        ) VALUES (
        	#deptId# ,
        	#deptName# ,
        	#parentId# ,
        	#remark# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="deptId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="Dept.update" >
    <![CDATA[
        UPDATE dept SET
	        dept_name = #deptName# ,
	        parent_id = #parentId# ,
	        remark = #remark# 
        WHERE 
	        dept_id = #deptId# 
    ]]>
    </update>

    <delete id="Dept.delete">
    <![CDATA[
        DELETE FROM dept WHERE
        dept_id = #deptId# 
    ]]>
    </delete>
    
    <select id="Dept.getById" resultMap="RM.Dept">
	    SELECT <include refid="Dept.columns"/>
	    <![CDATA[
	        FROM dept 
	        WHERE 
		        dept_id = #deptId# 
	    ]]>
    </select>

	<sql id="Dept.findPage.where">
	    <dynamic prepend="WHERE">
		       <isNotEmpty prepend="AND" property="deptId">
		             dept_id = #deptId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="deptName">
		             dept_name = #deptName#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="parentId">
		             parent_id = #parentId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="remark">
		             remark = #remark#
		       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="Dept.findPage.count" resultClass="long">
        SELECT count(*) FROM dept <include refid="Dept.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="Dept.findPage" resultMap="RM.Dept">
    	SELECT <include refid="Dept.columns"/> FROM dept 
		<include refid="Dept.findPage.where"/>
		<isNotEmpty property="sortColumns">
			ORDER BY $sortColumns$
		</isNotEmpty>
    </select>

	
</sqlMap>

