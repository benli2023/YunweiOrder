<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd" default-autowire="byName" default-lazy-init="false">
    
	<context:component-scan base-package="com.**.service" />
	<bean id="classPathResourceLoader" class="org.springframework.core.io.DefaultResourceLoader" />
	<bean id="colModelFactory" class="com.github.springrest.util.ColModelFactory">
		<constructor-arg index="0">
			<value>com/yunwei/order/controller/colmodel/</value>
		</constructor-arg>
		<constructor-arg index="1">
			<ref bean="classPathResourceLoader" />
		</constructor-arg>
		<constructor-arg index="2">
			<value>15</value>
		</constructor-arg>
	</bean>

</beans>
