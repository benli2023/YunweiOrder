<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">


<!-- 不使用namespace是由于sql搜索定位会比较方便 -->
<sqlMap>

    <resultMap id="RM.Category" class="com.yunwei.order.model.Category">
        <result property="cateId" column="cate_id"/>
        <result property="parentId" column="parent_id"/>
        <result property="cateName" column="cate_name"/>
        <result property="isAvailable" column="is_available"/>
        <result property="ctime" column="cTime"/>
        <result property="admin" column="admin"/>
    </resultMap>

	<!-- 用于select查询公用抽取的列 -->
	<sql id="Category.columns">
	    <![CDATA[
        cate_id ,parent_id ,cate_name ,is_available ,cTime ,admin 
	    ]]>
	</sql>
	
    <insert id="Category.insert" >
    <![CDATA[
        INSERT INTO category (
        	cate_id ,
        	parent_id ,
        	cate_name ,
        	is_available ,
        	cTime ,
        	admin 
        ) VALUES (
        	#cateId# ,
        	#parentId# ,
        	#cateName# ,
        	#isAvailable# ,
        	#ctime# ,
        	#admin# 
        )
    ]]>
    <!--
    mysql:		type="post" SELECT  select last_insert_id()
    sqlserver:	type="post" SELECT  @@identity  AS  ID
    oracle:		type="pre" 	SELECT  sequenceName.nextval AS ID FROM DUAL
    DB2:		type="pre"	values nextval for sequenceName
    -->
        <selectKey resultClass="java.lang.Long" type="post" keyProperty="cateId" >
            select last_insert_id()
        </selectKey>
    </insert>

    <update id="Category.update" >
    <![CDATA[
        UPDATE category SET
	        parent_id = #parentId# ,
	        cate_name = #cateName# ,
	        is_available = #isAvailable# ,
	        cTime = #ctime# ,
	        admin = #admin# 
        WHERE 
	        cate_id = #cateId# 
    ]]>
    </update>

    <delete id="Category.delete">
    <![CDATA[
        DELETE FROM category WHERE
        cate_id = #cateId# 
    ]]>
    </delete>
    
    <select id="Category.getById" resultMap="RM.Category">
	    SELECT <include refid="Category.columns"/>
	    <![CDATA[
	        FROM category 
	        WHERE 
		        cate_id = #cateId# 
	    ]]>
    </select>

	<sql id="Category.findPage.where">
	    <dynamic prepend="WHERE">
		       <isNotEmpty prepend="AND" property="cateId">
		             cate_id = #cateId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="parentId">
		             parent_id = #parentId#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="cateName">
		             cate_name = #cateName#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="isAvailable">
		             is_available = #isAvailable#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ctimeBegin">
		             cTime >= #ctimeBegin#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="ctimeEnd">
		             cTime &lt;= #ctimeEnd#
		       </isNotEmpty>
		       <isNotEmpty prepend="AND" property="admin">
		             admin = #admin#
		       </isNotEmpty>
	    </dynamic>	
	</sql>
	 
    <select id="Category.findPage.count" resultClass="long">
        SELECT count(*) FROM category <include refid="Category.findPage.where"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 #offset#,#pageSize#,#lastRows# 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="Category.findPage" resultMap="RM.Category">
    	SELECT <include refid="Category.columns"/> FROM category 
		<include refid="Category.findPage.where"/>
		<isNotEmpty property="sortColumns">
			ORDER BY $sortColumns$
		</isNotEmpty>
    </select>

	
</sqlMap>

